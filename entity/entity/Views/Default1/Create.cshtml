@model entity.CarInfo

@{
    ViewBag.Title = "Create";
    object myattributes = new { @class="rq-form-control reverse",placeholder="Engine Number" }  ;
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CarInfo</legend>
                  <div class="row">
                    <div class="col-md-4">
                      <input type="text" name="CarModel" class="rq-form-control reverse" placeholder="Car Model" required>
                    </div>
                  <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Engine Number" name="EngineNo" required>
                  </div>
                  <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Plate Number" name="PlateNo" required>
                  </div>
                  <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Registration Year" name="RegistrationYear" required>
                  </div>
                       <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Chasis Number" name="ChasisNo" required>
                  </div>
                  <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Rent Charges Per Day" name="RentChargePerDay" required>
                  </div>
                  <div class="col-md-4">
                      <select class="rq-form-control reverse" name="MakeNameId">
                          @foreach (entity.CarMake item in ViewBag.carmakers)
                          {
                          <option value="@item.MakeNameId">@item.MakeName</option>
                          }
                      </select>
                  </div>
                  <div class="col-md-4">
                    <input type="email" class="rq-form-control reverse" placeholder="Rent Charges Km" name="RentChargesKm" required>
                  </div>
                  <div class="col-md-4">
                    <input type="text" class="rq-form-control reverse" placeholder="Car Maker" name="CarMake" required>
                  </div>
                  <div class="col-md-12">
                    <div class="register-button">
                      <button type="submit" class="rq-btn rq-btn-primary border-radius">Register <i class="arrow_right"></i></button>
                    </div>
                  </div>
                  </div> <!-- end of registration section -->

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


